generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  cref     String @unique
  name     String
  Page     Page[]
}

model Page {
  id        String @id @default(cuid())
  url       String @unique
  page_name String
  user_id   String
  user      User   @relation(fields: [user_id], references: [id])

  @@index([url])
  @@index([user_id])
}
